<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:id="@+id/main_graph"
            app:startDestination="@id/homeFragment">

    <fragment android:id="@+id/homeFragment" android:name="com.cloudfy.warInstructions.home.HomeFragment"
              android:label="fragment_home" tools:layout="@layout/fragment_home">
        <action android:id="@+id/goToIndex" app:destination="@id/indexFragment" app:popUpTo="@id/homeFragment"/>
    </fragment>
    <fragment android:id="@+id/indexFragment" android:name="com.cloudfy.warInstructions.index.IndexFragment"
              android:label="fragment_index" tools:layout="@layout/fragment_index">
        <argument android:name="chapters" app:argType="com.cloudfy.warInstructions.entities.Chapter[]"/>
    </fragment>
</navigation>